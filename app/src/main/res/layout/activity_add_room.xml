<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fyp.EditRoomsMenu"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:textColor="@color/textOnPrimaryColor"
        android:text="ROOM MENU"
        android:textSize="30sp"
        />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:layout_gravity="center"
        android:src="@drawable/ic_navigation_black_24dp"
        android:tint="@color/textOnPrimaryColor"/>

    <Button
        android:background="@drawable/roundbuttonprimary"
        android:fontFamily="@font/roboto"
        android:textColor="@color/textOnPrimaryColor"
        android:layout_width="200sp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:text="Add Room"
        android:id="@+id/addRoomButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>


    <Button
        android:background="@drawable/roundbuttonprimary"
        android:fontFamily="@font/roboto"
        android:textColor="@color/textOnPrimaryColor"
        android:layout_width="200sp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:text="Add Access points"
        android:id="@+id/addAccessPoints"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
</LinearLayout>
