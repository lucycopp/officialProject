<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fyp.AddKeywords"
    android:orientation="vertical"
    android:background="@color/colorSecondary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:fontFamily="@font/roboto"
        android:textColor="@color/textOnSecondaryColor"
        android:text="ADD KEYWORDS"
        android:paddingTop="30sp"
        android:textSize="25sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:src="@drawable/ic_format_quote_white_36dp"
        android:tint="@color/textOnSecondaryColor"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:textSize="15sp"
        android:gravity="center"
        android:paddingTop="10sp"
        android:fontFamily="@font/roboto"
        android:text="SELECT ROOM"/>

        <Spinner
            android:id="@+id/roomNamesSpinnerKeywords"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.35"
            android:layout_marginBottom="20sp"
            android:layout_width="200sp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

    <EditText
        android:layout_width="250sp"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        android:hint="Keyword"
        android:id="@+id/editTextKeyword"
        />

    <Button
        android:background="@drawable/roundbuttonsecondary"
        android:layout_width="200sp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:fontFamily="@font/roboto"
        android:layout_marginBottom="50sp"
        android:text="ADD KEYWORD"
        android:id="@+id/addSingleKeywordButton"/>


</LinearLayout>
