<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fyp.SignUp"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="CREATE A NEW USER"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/textOnSecondaryColor"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:src="@drawable/ic_account_circle_black_36dp"
        android:layout_marginBottom="20sp"/>
   <EditText
       android:layout_width="250sp"
       android:layout_height="0dp"
       android:gravity="center"
       android:id="@+id/emailAddressSignUp"
       android:textSize="15sp"
       android:layout_gravity="center"
       android:layout_weight="0.5"
       android:hint="Email Address" />
    <EditText
        android:layout_width="250sp"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/passwordSignUp1"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:hint="Password" />
    <EditText
        android:layout_width="250sp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:id="@+id/passwordSignUp2"
        android:layout_weight="0.5"
        android:hint="Repeat Password" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/textOnSecondaryColor"
            android:text="Account Type:"/>
    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <RadioButton android:id="@+id/tourGuideRadio"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Tour Guide"/>
        <RadioButton
            android:id="@+id/operatorRadio"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Operator" />
    </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_width="200sp"
        android:layout_height="0dp"
        android:background="@drawable/roundbuttonsecondary"
        android:layout_weight="0.4"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:id="@+id/signUpNewUserButton"
        android:layout_marginBottom="50sp"
        />
</LinearLayout>
