<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fyp.AddRoomActivity"
    android:orientation="vertical"
    android:background="@color/colorSecondary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="ADD NEW ROOM"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/textOnSecondaryColor"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:src="@drawable/ic_navigation_black_24dp"
        android:layout_marginBottom="20sp"/>

    <EditText
        android:layout_width="250sp"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/roomNameInsert"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:hint="Room Name" />

        <EditText
            android:layout_width="250sp"
            android:layout_height="0dp"
            android:gravity="center"
            android:id="@+id/roomTimeInsert"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:hint="Room Time" />

<Button
    android:layout_width="200sp"
    android:layout_height="0dp"
    android:background="@drawable/roundbuttonsecondary"
    android:layout_weight="0.3"
    android:layout_gravity="center"
    android:text="ADD ROOM"
    android:layout_marginTop="20sp"
    android:id="@+id/addRoomToDatabaseButton"
    android:layout_marginBottom="50sp"/>



</LinearLayout>
